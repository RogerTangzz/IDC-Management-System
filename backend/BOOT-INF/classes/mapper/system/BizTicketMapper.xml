    <!-- ================== 扩展统计 SQL ================== -->
    <select id="countGroupByStatus" resultType="java.util.HashMap">
        select status as k, count(*) as v from biz_ticket group by status
    </select>
    <select id="countGroupByPriority" resultType="java.util.HashMap">
        select priority as k, count(*) as v from biz_ticket group by priority
    </select>
    <select id="countToday" resultType="java.util.HashMap">
        select 
            sum(case when date(create_time)=current_date then 1 else 0 end) as todayNew,
            sum(case when completion_time is not null and date(completion_time)=current_date then 1 else 0 end) as todayCompleted
        from biz_ticket
    </select>
    <!-- 处理时长分布区间: lt1h / 1-4h / 4-8h / 8-24h / ge24h -->
    <select id="durationDistribution" resultType="java.util.HashMap">
        select 
          sum(case when TIMESTAMPDIFF(MINUTE, create_time, completion_time) < 60 then 1 else 0 end) as lt1h,
          sum(case when TIMESTAMPDIFF(MINUTE, create_time, completion_time) >=60 and TIMESTAMPDIFF(MINUTE, create_time, completion_time) < 240 then 1 else 0 end) as bt1to4h,
          sum(case when TIMESTAMPDIFF(MINUTE, create_time, completion_time) >=240 and TIMESTAMPDIFF(MINUTE, create_time, completion_time) < 480 then 1 else 0 end) as bt4to8h,
          sum(case when TIMESTAMPDIFF(MINUTE, create_time, completion_time) >=480 and TIMESTAMPDIFF(MINUTE, create_time, completion_time) < 1440 then 1 else 0 end) as bt8to24h,
          sum(case when TIMESTAMPDIFF(MINUTE, create_time, completion_time) >=1440 then 1 else 0 end) as ge24h,
          count(*) as total
        from biz_ticket
        where completion_time is not null
    </select>
    <!-- SLA 超时: deadline 不为空且 (完成时间>deadline 或 未完成且当前时间>deadline) 视为超时 -->
    <select id="slaStats" resultType="java.util.HashMap">
        select 
          sum(case when deadline is not null then 1 else 0 end) as withDeadline,
          sum(case when deadline is not null and (
                (completion_time is not null and completion_time > deadline) or
                (completion_time is null and now() > deadline)
              ) then 1 else 0 end) as timeoutCount,
          sum(case when deadline is not null and completion_time is not null and completion_time <= deadline then 1 else 0 end) as ontimeCompleted
        from biz_ticket
    </select>
        <select id="countOverdue" resultType="long">
                select count(*) from biz_ticket
                where deadline is not null
                    and status <> 'closed'
                    and completion_time is null
                    and now() > deadline
        </select>
