    <sql id="selectBizTicketVo">
    select ticket_id, ticket_no, title, description, priority, status, equipment, location, specialty, fault_type, reporter_id, reporter_name, reporter_phone, assignee_id, assignee_name, source, source_id, discovery_time, deadline, completion_time, solution, escalation_history, attachments, last_status_time, last_action, del_flag, create_by, create_time, update_by, update_time, remark from biz_ticket
    </sql>

