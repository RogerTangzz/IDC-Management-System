<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.DcRoomMapper">
    <resultMap id="DcRoomResult" type="DcRoom">
        <result property="roomId" column="room_id"/>
        <result property="name" column="name"/>
        <result property="floor" column="floor"/>
        <result property="area" column="area"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <select id="selectById" parameterType="long" resultMap="DcRoomResult">
        select * from dc_room where room_id = #{roomId}
    </select>

    <select id="selectList" parameterType="DcRoom" resultMap="DcRoomResult">
        select * from dc_room
        <where>
            <if test="name != null and name != ''"> and name like concat('%',#{name},'%')</if>
            <if test="floor != null and floor != ''"> and floor = #{floor}</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
            and del_flag = '0'
        </where>
        order by name
    </select>

    <insert id="insert" parameterType="DcRoom" useGeneratedKeys="true" keyProperty="roomId">
        insert into dc_room(name, floor, area, status, del_flag, create_by, create_time, remark)
        values(#{name}, #{floor}, #{area}, #{status}, '0', #{createBy}, #{createTime}, #{remark})
    </insert>

    <update id="update" parameterType="DcRoom">
        update dc_room
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="floor != null">floor=#{floor},</if>
            <if test="area != null">area=#{area},</if>
            <if test="status != null">status=#{status},</if>
            <if test="updateBy != null">update_by=#{updateBy},</if>
            <if test="updateTime != null">update_time=#{updateTime},</if>
            <if test="remark != null">remark=#{remark},</if>
        </set>
        where room_id=#{roomId}
    </update>

    <update id="deleteById" parameterType="long">
        update dc_room set del_flag='1' where room_id = #{roomId}
    </update>
</mapper>

